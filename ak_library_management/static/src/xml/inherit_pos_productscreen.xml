<?xml version="1.0" encoding="UTF-8" ?>
<!--inherit pos productScreen to modify the grid of the view-->
<templates xml:space="preserve">
    <t t-inherit="point_of_sale.ProductScreen" t-inherit-mode="extension">
        <xpath expr="//div[contains(@t-attf-class, 'product-list')]" position="attributes">
            <attribute name="t-attf-class">product-list d-grid gap-1 overflow-y-auto px-1 pt-0 pb-0</attribute>
        </xpath>
    </t>
</templates>