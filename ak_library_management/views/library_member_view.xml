<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--List view of members tree-->
        <record id="view_library_member_list" model="ir.ui.view">
            <field name="name">library.member.list</field>
            <field name="model">library.member</field>
            <field name="arch" type="xml">
                <list string="List View">
                    <field name="name" />
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="membership_date"/>
                </list>
            </field>
        </record>

        <!--action of library member in list view-->
        <record id="action_library_member_list" model="ir.actions.act_window">
            <field name="name">Library Members</field>
            <field name="res_model">library.member</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_library_member_list"/>
        </record>

        <!--menuitem of library memeber -->
        <menuitem id="menu_member" name="Members" parent="menu_library"/>
        <menuitem id="sub_menu_member" name="Member" parent="menu_member" action="action_library_member_list"></menuitem>
    </data>
</odoo>
